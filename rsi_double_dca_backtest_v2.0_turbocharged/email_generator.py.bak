        if vix < 15:
            volatility_sizing = 150.0  # Standard
            vix_level = "Low"
        elif vix < 25:
            volatility_sizing = 180.0  # +20%
            vix_level = "Medium"
        else:
            volatility_sizing = 210.0  # +40%
